@{
    ViewBag.Title = "To Do List";
}
<h3>TODO Items</h3>
<ul>
    @model List<string>
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>
            @Model[i]
            @Html.ActionLink("[Delete]","RemoveItem", new { i })
        </li>
  
    }

</ul>

<form action="/Home/AddItem" method="post">
    <div>Add TODO item:</div>
    <input type="text" autofocus name="newItem"/>
    <input type="submit"/>
</form>